<body>

    <div class="card" id="mainCard">
        <div class="photo-container">
            <img src="https://i.ibb.co/XZmntrJ8/image-d0ec5c.jpg" alt="Dla Gabrysi">
        </div>

        <h1 id="mainTitle">Gabrysiu, czy zostaniesz mojƒÖ WalentynkƒÖ? ‚ù§Ô∏è</h1>

        <div class="btn-container" id="buttons">
            <button id="yesBtn" onclick="agree()">TAK</button>
            <button id="noBtn" onmouseover="moveNo()" ontouchstart="moveNo()">NIE</button>
        </div>
    </div>

    <script>
        let noScale = 1;
        let yesScale = 1;

        function moveNo() {
            const noBtn = document.getElementById('noBtn');
            const yesBtn = document.getElementById('yesBtn');

            noBtn.style.position = 'absolute';
            noScale -= 0.12;
            if (noScale < 0.2) noScale = 0.1;
            noBtn.style.transform = `scale(${noScale})`;

            yesScale += 0.15;
            yesBtn.style.transform = `scale(${yesScale})`;

            const x = Math.random() * (window.innerWidth - 100) - (window.innerWidth / 2 - 50);
            const y = Math.random() * (window.innerHeight - 100) - (window.innerHeight / 2 - 50);

            noBtn.style.left = x + 'px';
            noBtn.style.top = y + 'px';
        }

        function createHeart() {
            const heart = document.createElement('div');
            heart.classList.add('heart');
            heart.innerHTML = '‚ù§Ô∏è';
            heart.style.left = Math.random() * 100 + 'vw';
            heart.style.animationDuration = Math.random() * 2 + 3 + 's';
            document.body.appendChild(heart);
            setTimeout(() => heart.remove(), 5000);
        }

        function agree() {
            document.getElementById('buttons').style.display = 'none';
            document.getElementById('mainTitle').innerHTML =
                "Wiedzia≈Çem, Gabrysiu! ‚ù§Ô∏è<br>Bardzo siƒô cieszƒô! ü•∞";
            document.body.style.backgroundColor = "#ffb6c1";
            setInterval(createHeart, 300);
        }
    </script>
